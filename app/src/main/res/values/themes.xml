<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoftCoin" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_six</item>
        <item name="colorSecondary">@color/grey_blue</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Theme.LoftCoin.H1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Theme.LoftCoin.H2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Theme.LoftCoin.H3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Theme.LoftCoin.H4</item>
        <item name="walletCardWidth">240dp</item>
    </style>

    <style name="Theme.LoftCoin.SemiRoundButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:height">64dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:minWidth">248dp</item>
        <item name="android:background">@drawable/btn_welcome_default</item>
        <item name="android:textSize">12sp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="backgroundTint">@null</item>
    </style>
    
    <style name="TextAppearance.Theme.LoftCoin" parent="TextAppearance.MaterialComponents.Body1"/>

    <style name="TextAppearance.Theme.LoftCoin.H1">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Theme.LoftCoin.H2">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Theme.LoftCoin.H3">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Theme.LoftCoin.Caption16Bold">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Theme.LoftCoin.Caption16Normal">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Theme.LoftCoin.Body11Normal">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Theme.LoftCoin.Body12Normal">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Theme.LoftCoin.H4">
        <item name="android:textSize">14sp</item>
    </style>
</resources>